@page
@model RolePlayDemoAug24.Pages.ChooseBeastModel
@{
}

<p class="display-6 fw-bold">Choose a Beast</p>

<p class="m-0 fst-italic">Little is known about Beasts, except that they have various types of Attacks.</p>
<p class="m-0 fst-italic">The only way to learn more about them is to fight them...</p>

<div class="container mt-3">
    <div class="row">
        @foreach (var beast in Model.Beasts)
        {
            <div class="col-md-3 p-3">
                <div class="card shadow" style="width: 18rem;">
                    <div class="card-header">
                        <h3>@beast.Name</h3>
                    </div>
                    <div class="card-body d-flex flex-column">
                        <img class="img-thumbnail mb-3" src="/images/beasts/@(beast.Name.Replace(" ", string.Empty)).jpg">
                        <p class="fst-italic">@beast.Description</p>
                        <div class="d-flex justify-content-between">
                            <div>
                                <h5>HP: @(beast.Healthpoints)</h5>
                            </div>
                            <div>
                                <a class="btn btn-primary btn-sm" type="button" title="Select" asp-page-handler="SetBeast" asp-route-id="@beast.Id">Select</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<a class="btn btn-danger btn-lg mt-3 me-3" asp-page="ChooseArmor"> Back </a>